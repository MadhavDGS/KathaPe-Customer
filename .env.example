# KathaPe Customer App - Production Environment Variables
# Copy this file to .env and fill in your actual values

# Appwrite Configuration (replaces PostgreSQL)
APPWRITE_ENDPOINT=https://cloud.appwrite.io/v1
APPWRITE_PROJECT_ID=your_appwrite_project_id
APPWRITE_API_KEY=your_appwrite_api_key
APPWRITE_DATABASE_ID=your_database_id

# Collection IDs (must match your Appwrite database collections)
USERS_COLLECTION_ID=users
CUSTOMERS_COLLECTION_ID=customers
BUSINESSES_COLLECTION_ID=businesses
CUSTOMER_CREDITS_COLLECTION_ID=customer_credits
TRANSACTIONS_COLLECTION_ID=transactions

# Flask Configuration
SECRET_KEY=e9a3f4c8b7d6e5f4a3b2c1d0e9f8a7b6c5d4e3f2a1b0c9d8e7f6a5b4c3d2e1f0
FLASK_ENV=production
FLASK_DEBUG=False

# Application Port (Render auto-assigns PORT)
PORT=5000
CUSTOMER_PORT=5002

# Logging
LOG_LEVEL=INFO
LOG_FILE=kathape-customer.log

# Legacy Database Configuration (not used with Appwrite)
# EXTERNAL_DATABASE_URL=postgresql://username:password@localhost:5432/kathape_db

# Windows-specific settings (not needed for Render)
# WAITRESS_HOST=127.0.0.1
# WAITRESS_PORT=8080
# WAITRESS_THREADS=4
# NGINX_PORT=80
